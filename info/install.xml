<?xml version="1.0" encoding="utf-8" ?>

<!-- The name of template -->
<!-- @name the name must be unique -->
<template name="light24">
	<!-- The title of template -->
	<title>Light Template for eSyndiCat</title>
	
	<!-- The description of template -->
	<summary>Light is pretty simple template without any graphics.</summary>
	
	<!-- The author of template -->
	<author>layoutzzz.com</author>
	
	<!-- The contributor of template -->
	<contributor>http://www.layoutzzz.com</contributor>
	
	<!-- The version of template -->
	<version>1.0</version>
	
	<!-- The date of release -->
	<date>2012-03-01</date>	

	<!-- The min version of script with the template will work -->
	<compatibility>2.4</compatibility>
	
	<!-- The status of template -->
	<!-- Must be active or inactive. Other statuses will be ignore and set inactive status -->
	<status>active</status>

	<!-- Phrases for template -->
	<!-- @key the key of phrase must be unique -->
	<!-- @lang the language of phrase -->
	<!-- @category the category of phrase -->
	<!-- @code the code of language -->
	<phrases>
		<phrase key="your_company_name" lang="English" category="frontend" code="en">Your company name</phrase>		
	</phrases>
	
	<!-- The configuration of template -->
	<!-- @configgroup the name of configuration group -->
	<!-- @name the name of configuration -->
	<!-- @type the type of configuration (text, textarea, checkbox, radio, select, combo, divider, hidden, password) -->
	<!-- @description of configuration -->
	<!-- @multiplevalues of configuration -->
	<config configgroup="general" name="esyndicat_block_positions" type="hidden" description="position">left,right,top,center,bottom,user1,user2,verybottom,verytop</config>
	<config configgroup="general" name="ckeditor_color" type="hidden" description="CKEditor color">#F00</config>

</template>
